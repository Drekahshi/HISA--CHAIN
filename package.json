{
  "name": "project-hisa",
  "version": "1.0.0",
  "description": "Unified Hedera Ecosystem Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "frontend": "cd frontend && npm run dev",
    "backend": "cd backend && npm run serve",
    "deploy": "npm run deploy:frontend && npm run deploy:backend",
    "deploy:frontend": "cd frontend && npm run build && firebase deploy --only hosting",
    "deploy:backend": "cd backend && firebase deploy --only functions",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config jest.config.js",
    "setup:hedera": "node scripts/setup-hedera.js"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0"
  }
}